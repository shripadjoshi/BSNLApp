<% roles.each do |role| %>
  <tr>    
    <td><%= role.name %></td>
    <td>
      <%= link_to "Edit", edit_role_path(role), class: 'btn btn-min btn-success' if current_user.has_role? :admin %>
      <%= link_to "Delete", role_path(role), method: "DELETE", data: {confirm: 'Are you sure?'}, class: 'btn btn-min btn-danger' if current_user.has_role? :admin %>
    </td>
   </tr>
<%end%>