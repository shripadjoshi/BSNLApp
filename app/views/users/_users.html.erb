<% users.each do |user| %>
  <tr>    
    <td><%= user.username %></td>
    <td><%= user.email %></td>
    <td width="20%">
      <%= check_box_tag("user_account_active", 
                        nil, 
                        user.account_active?, 
                        class: "checkbox", 
                        user_id: user.id, 
                        disabled: current_user == user ? true : false,
                        readonly: current_user == user ? true : false
                      ) %>   
    </td>
   </tr>
<%end%>
